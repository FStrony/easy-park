<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
		<persistence-unit name="CLIENTE_ORACLE" transaction-type="JTA">
		
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/datasources/OracleDS</jta-data-source>
		<class>br.com.easypark.entity.Empresa</class>
		<class>br.com.easypark.entity.Estacionamento</class>
		<class>br.com.easypark.entity.EstacionamentoVeiculo</class>
		<class>br.com.easypark.entity.EnderecoEstacionamento</class>
		<class>br.com.easypark.entity.HorarioFuncionamento</class>
		<class>br.com.easypark.entity.Pais</class>
		<class>br.com.easypark.entity.Telefone</class>
		<class>br.com.easypark.entity.TipoDia</class>
		<class>br.com.easypark.entity.TipoTelefone</class>
		<class>br.com.easypark.entity.TipoVeiculo</class>
		<class>br.com.easypark.entity.Valor</class>
			<properties>
				<property name="hibernate.show_sql" value="true" />
				<property name="hibernate.hbm2ddl.auto" value="validate" />
				<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			</properties>
			
		</persistence-unit>
		
		
</persistence>
